{
  "manifest_version": 3,
  "name": "TableMorph",
  "version": "1.0",
  "description": "Convert clipboard table data to various formats",
  "permissions": ["clipboardRead", "clipboardWrite"],
  "host_permissions": [
    "http://localhost:5173/*",
    "http://127.0.0.1:5173/*",
    "http://[::1]:5173/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}